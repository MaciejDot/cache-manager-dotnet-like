{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": "./",
    "outDir": "dist/",
    "resolveJsonModule": true,
    "noImplicitAny":false,
    "declaration": true,
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src/index.ts"
  ]
}
