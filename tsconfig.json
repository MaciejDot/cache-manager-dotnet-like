{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "rootDir": "src",
    "strict": true,
    "importHelpers": true,
    "noEmitOnError": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": "./",
    "outDir": "dist/",
    "resolveJsonModule": true,
    "noImplicitAny":false,
    "declaration": true,
    "allowJs": false,
    "alwaysStrict": false,
    "declarationDir": "dist/types",
    "importsNotUsedAsValues": "preserve",
    "listEmittedFiles": true,
    "useDefineForClassFields": true,
    //"types": ["./src/index.ts"],
    //"typeRoots": ["src"]
  },
  "exclude": [
    "node_modules"
  ],
  "filesGlob": [
    "!./node_modules/**"
  ],
  "include": [
    //"./src/**/*",
    "src/index.ts"
  ]
}
