{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": "./",
    "outDir": "dist/",
    "resolveJsonModule": true,
    "noImplicitAny":false,
    "declaration": true,
    "allowJs": false,
    "alwaysStrict": true,
    "declarationDir": "types",
    "typeRoots": ["src"]
  },
  "exclude": [
    "node_modules"
  ],
  "filesGlob": [
    "!./node_modules/**"
  ],
  "include": [
    "./src/**/*",
    "src/index.ts"
  ]
}
